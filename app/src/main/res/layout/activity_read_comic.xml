<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.ReadComicActivity">

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp"
        android:id="@+id/rlcReadComic"
        android:layout_marginBottom="50dp"/>

    <Button
        android:id="@+id/btnNextChap"
        android:layout_width="71dp"
        android:layout_height="46dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="38dp"
        android:drawableLeft="@drawable/baseline_keyboard_double_arrow_right_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rlcReadComic" />

    <Button
        android:id="@+id/btnPreChap"
        android:layout_width="68dp"
        android:layout_height="46dp"
        android:layout_marginStart="53dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="181dp"
        android:drawableLeft="@drawable/baseline_keyboard_double_arrow_left_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnNextChap"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rlcReadComic" />
</androidx.constraintlayout.widget.ConstraintLayout>